<?xml version="1.0" encoding="utf-8"?>



<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/shape_radius_8_1a252f">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center">

            <ImageView
                android:id="@+id/meet_detail_back"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:background="@mipmap/back1" />


        </RelativeLayout>

        <TextView
            android:textStyle="bold"
            android:id="@+id/meet_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="会议详情"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_22" />

    </RelativeLayout>



    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/shape_radius_8_1a252f"
        android:orientation="vertical">


        <TextView
            android:id="@+id/meet_detail_name"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            android:textColor="#ffffff"
            android:text="会议名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/meet_detail_state"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_13"
            android:textColor="#0fb89a"
            android:text="会议状态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:background="@drawable/shape_radius_8_1a252f"
        android:orientation="vertical">


        <TextView
            android:id="@+id/meet_detail_start_time"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:textColor="#e6e6e6"
            android:text="开始时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/meet_detail_end_time"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:textColor="#e6e6e6"
            android:text="结束时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/meet_detail_all_time"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:textColor="#e6e6e6"
            android:text="会议时常"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/meet_detail_initiator"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:textColor="#e6e6e6"
            android:text="发起人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_8_1a252f"
        android:orientation="vertical">


        <TextView
            android:id="@+id/meet_detail_num"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:textColor="#e6e6e6"
            android:text="参会人员"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/meet_detail_personnel"
            android:text="人员"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:textColor="#e6e6e6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </ScrollView>


    </LinearLayout>
    </LinearLayout>
</ScrollView>
