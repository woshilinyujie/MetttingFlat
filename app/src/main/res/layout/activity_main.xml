<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#13191f"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_33"
    >

        <ImageView
            android:id="@+id/next"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/enter" />

        <TextView
            android:id="@+id/meet_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="会议室"
            android:textColor="#d0d1d2"
            android:textSize="@dimen/sp_19" />
    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_27"
        android:background="@drawable/shape_radius_8_1a252f"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/meet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会议名称"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_marginTop="@dimen/dp_13"
                android:id="@+id/meet_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="#c4c2c2"
                android:textSize="@dimen/sp_14" />






    </LinearLayout>



    <RelativeLayout
        android:id="@+id/meet_state_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_135"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_radius_8_1a252f">

        <TextView
            android:id="@+id/meet_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="会议室状态"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_33" />


    </RelativeLayout>


<Button
    android:id="@+id/open"
    android:textStyle="bold"
    android:textSize="@dimen/sp_16"
    android:text="开门"
    android:layout_marginTop="@dimen/dp_45"
    android:background="@drawable/shape_radius_4_1950d8"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"/>
</LinearLayout>
