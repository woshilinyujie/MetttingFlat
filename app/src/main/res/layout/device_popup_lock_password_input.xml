<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#13191f"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30">


        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15">

            <ImageView
                android:layout_centerVertical="true"
                android:background="@mipmap/back"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_13" />

        </RelativeLayout>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="密码开门"
            android:textColor="#d0d1d2"
            android:textSize="19sp" />

    </RelativeLayout>
    <com.example.meettingflat.view.GridPasswordView
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:id="@+id/password_view"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:focusable="false"
        app:device_gpvGridColor="#1a252f"
        app:device_gpvLineColor="#33485a"
        app:device_gpvLineWidth="1dp"
        app:device_gpvPasswordLength="6"
        app:device_gpvPasswordTransformation="●"
        app:device_gpvPasswordType="numberPassword"
        app:device_gpvTextColor="#d0d1d2"
        app:device_gpvTextSize="16sp" />

    <LinearLayout
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:onClick="click"
            android:id="@+id/one"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/two"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/three"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:id="@+id/four"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#dddcdc"
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/five"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#dddcdc"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/six"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#dddcdc"
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:id="@+id/seven"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#dddcdc"
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/eight"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#dddcdc"
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/nine"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#dddcdc"
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:id="@+id/clear"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#dddcdc"
            android:text="清除"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/zero"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#dddcdc"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/confirm_tv"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#dddcdc"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>
